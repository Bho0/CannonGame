<NewGame>:
    name: 'newgame'
    FloatLayout:        
        Image:
            source: 'Default_pirate_captain_cabin_in_the_ship_2.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)  # Copre l'intero layout
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
            pos_hint: {'center_x': .05, 'center_y': .91}
            size_hint: (.1, .1)
            background_color: 0, 0, 0, 0
            on_press: app.root.current = 'homepage'
            Image:
                source: 'homeButton.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50, 50
        
        Image:
            source: 'captain.png'
            allow_stretch: False
            keep_ratio: True
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.2, 'center_y': 0.3}

        CustomLabel:
            id: label
            text: 'Testo stile professore pokemon che introduce al gioco'
            font_size: 12
            font_name: 'Caribbean.ttf'  # Specifica il font personalizzato
            color: 0, 0, 0, 1  # Testo nero
            size_hint: (None, None)
            size: self.texture_size
            pos_hint: {'center_x': 0.6, 'center_y': 0.6}
        
        TextInput:
            id: text_input
            multiline: False
            size_hint: (.4, .05)
            pos_hint: {'center_x': 0.6, 'center_y': 0.4}

        Button:
            pos_hint: {'center_x': .9, 'center_y': .1}
            size_hint: (.1, .05)
            text: 'Start'
            on_press:
                root.check_name()