#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

#:import level1 level.Level1
#:import level2 level.Level2
#:import level3 level.Level3
#:import level4 level.Level4
#:import level5 level.Level5
#:import level6 level.Level6
#:import level7 level.Level7
#:import level8 level.Level8

<LevelSelection>:
    name: 'levelSelection'
    FloatLayout:
        Image:
            source: 'images/levels (3).jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)  # Copre l'intero layout
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
            id: LVL1
            pos_hint: {'center_x': .1, 'center_y': .3}
            size_hint: (.1, .1)
            text: 'LVL 1'
            on_press:
                root.open_start_popup(root.timestamp, level1, 'level1')
        
        Button:
            id: LVL2
            pos_hint: {'center_x': .4, 'center_y': .2}
            size_hint: (.1, .1)
            text: 'LVL 2'
            on_press:
                root.open_start_popup(root.timestamp, level2, 'level2')
        
        Button:
            id: LVL3
            pos_hint: {'center_x': .7, 'center_y': .2}
            size_hint: (.1, .1)
            text: 'LVL 3'
            on_press:
                root.open_start_popup(root.timestamp, level3, 'level3')
        
        Button:
            id: LVL4
            pos_hint: {'center_x': .9, 'center_y': .4}
            size_hint: (.1, .1)
            text: 'LVL 4'
            on_press:
                root.open_start_popup(root.timestamp, level4, 'level4')
        
        Button:
            id: LVL5
            pos_hint: {'center_x': .7, 'center_y': .5}
            size_hint: (.1, .1)
            text: 'LVL 5'
            on_press:
                root.open_start_popup(root.timestamp, level5, 'level5')
        
        Button:
            id: LVL6
            pos_hint: {'center_x': .4, 'center_y': .6}
            size_hint: (.1, .1)
            text: 'LVL 6'
            on_press:
                root.open_start_popup(root.timestamp, level6, 'level6')

        Button:
            id: LVL7
            pos_hint: {'center_x': .2, 'center_y': .8}
            size_hint: (.1, .1)
            text: 'LVL 7'
            on_press:
                root.open_start_popup(root.timestamp, level7, 'level7')

        Button:
            id: LVL8
            pos_hint: {'center_x': .5, 'center_y': .4}
            size_hint: (.1, .1)
            text: 'LVL 8'
            on_press:
                root.open_start_popup(root.timestamp, level8, 'level8')

        Button:
            pos_hint: {'center_x': .2, 'center_y': .95}
            size_hint: (.05, .05)
            text: '^'
            on_press:
                root.manager.transition = SlideTransition()
                root.manager.transition.direction = 'down'
                app.root.current = 'comingsoon'
        
        Button:
            pos_hint: {'center_x': .05, 'center_y': .91}
            size_hint: (.1, .1)
            background_color: 0, 0, 0, 0
            on_press:
                root.goto_mainpage(root.timestamp)
            Image:
                source: 'images/homeButton.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50, 50

<ComingSoon>:
    name: 'comingsoon'
    FloatLayout:
        Button:
            background_color: 0, 0, 0, 0
            text: 'Coming Soon'
            font_name: 'fonts/Caribbean.ttf'
            font_size: 52
            on_press:
                root.manager.transition = FadeTransition()
                app.root.current = 'levelSelection'

<StartPopup>:
    name: 'startPopup'
    BoxLayout:
        id: start_box
        orientation: "vertical"
        Label:
            text: "Choose which projectile you want to use"
            font_name: 'fonts/Caribbean.ttf'         
        GridLayout:
            id: ammo_grid
            cols: 3
            spacing: '10dp'
            padding: '10dp'
        Button:
            id: start_button
            background_color: 0, 0, 0, 0
            on_press:
                root.goto_level(root.timestamp, root.selected_prj, root.screen_name, root.name)
            Image:
                source: 'images/playButton.png'
                allow_stretch: True
                keep_ratio: False
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50, 50