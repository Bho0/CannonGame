# Market screen where users can purchase items
<Market>:
    name: 'market' 
    
    FloatLayout:

        Image:
            source: 'images/Concept_Art_pirate_market_stand_3.jpg' 
            allow_stretch: True  
            keep_ratio: False 
            size_hint: (1, 1) 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  
            
        BoxLayout:
            orientation: 'vertical'  
            
            Label:
                text: 'This is our market:'
                font_size: 32
                font_name: 'fonts/Caribbean.ttf' 
            
            
            GridLayout:
                cols: 3 
                spacing: '10dp'  
                padding: '10dp'
                
                Button:
                    text: 'Dressing room'
                    font_name: 'fonts/Caribbean.ttf'
                    background_color: 0, 0, 0, 0.6 
                    on_press: root.goto_dressingRoom(root.timestamp)  # Navigate to dressing room on press
                
                Button:
                    text: 'Projectile store'
                    font_name: 'fonts/Caribbean.ttf' 
                    background_color: 0, 0, 0, 0.6 
                    on_press: root.goto_projectileStore(root.timestamp)  # Navigate to projectile store on press

      
        Button:
            pos_hint: {'center_x': .05, 'center_y': .91} 
            size_hint: (.1, .1) 
            background_color: 0, 0, 0, 0  
            on_press: 
                root.goto_mainpage(root.timestamp) 
            Image:
                source: 'images/homeButton.png' 
                center_x: self.parent.center_x 
                center_y: self.parent.center_y  
                size: 50, 50  
# Dressing room screen where users can choose different outfits
<DressingRoom>:
    name: 'dressingRoom' 
    
    FloatLayout:
 
        Image:
            source: 'images/Concept_Art_pirate_market_stand_3.jpg'  # Background image
            allow_stretch: True 
            keep_ratio: False  
            size_hint: (1, 1)  
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  
        
        BoxLayout:
            orientation: 'vertical'  
            
            Label:
                text: 'Choose your style:' 
                font_size: 32 
                font_name: 'fonts/Caribbean.ttf' 
            
           
            GridLayout:
                id: dress_grid 
                cols: 3 
                spacing: '10dp' 
                padding: '10dp' 

        # Button to navigate back to the market screen
        Button:
            pos_hint: {'center_x': .05, 'center_y': .91}  
            size_hint: (.1, .1)  
            background_color: 0, 0, 0, 0  
            on_press: app.root.current = 'market'
            Image:
                source: 'images/undo.png'  
                center_x: self.parent.center_x 
                center_y: self.parent.center_y 
                size: 50, 50 
# Projectile store screen where users can buy projectiles
<ProjectileStore>:
    name: 'projectileStore' 
    FloatLayout:
        Image:
            source: 'images/Concept_Art_pirate_market_stand_3.jpg'  # Background image
            allow_stretch: True
            keep_ratio: False 
            size_hint: (1, 1) 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5} 
        
        BoxLayout:
            orientation: 'vertical'
            
            Label:
                text: 'Buy your projectiles'
                font_size: 32
                font_name: 'fonts/Caribbean.ttf'  
            
            
            GridLayout:
                id: prj_grid 
                cols: 2  
                spacing: '10dp'  
                padding: '10dp'  

        # Button to navigate back to the market screen
        Button:
            pos_hint: {'center_x': .05, 'center_y': .91} 
            size_hint: (.1, .1) 
            background_color: 0, 0, 0, 0
            on_press: app.root.current = 'market'  
            Image:
                source: 'images/undo.png'  
                center_x: self.parent.center_x  
                center_y: self.parent.center_y  
                size: 50, 50  





               