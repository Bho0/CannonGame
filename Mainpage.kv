#:import Factory kivy.factory.Factory

<OpPopup@Popup>:
    auto_dismiss: True
    size_hint: (.5, .5)
    title: 'Options'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Save'
            color: 1, 1, 1, 1
            font_size: 30
            font_name: 'fonts/Caribbean.ttf'
            background_color: 0, 0, 0, 0
            on_press: app.root.get_screen('mainpage').save_game(app.root.get_screen('mainpage').timestamp)
        
        Button:
            text: 'Exit'
            color: 1, 1, 1, 1
            font_size: 30
            font_name: 'fonts/Caribbean.ttf'
            background_color: 0, 0, 0, 0
            on_press:
                root.dismiss()
                app.remove_mainpage()
                app.remove_newgame()
                app.root.current = 'homepage'

        Label:
            text: "Music"
            font_name: 'fonts/Caribbean.ttf'

        Slider:
            id: slider
            value_track: True
            value_track_color: [0, 0, 1, 1]
            min: 0
            max: 1
            value: 0.5
            on_value: app.change_volume(self.value)

        Label:
            text: "Sounds"
            font_name: 'fonts/Caribbean.ttf'

        Slider:
            id: slider
            value_track: True
            value_track_color: [0, 0, 1, 1]

<MainPage>:
    name: 'mainpage'
    FloatLayout:
        Image:
            source: 'images/Default_a_harbor_with_only_one_pirate_ship_0.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)  # Copre l'intero layout
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        Image:
            id: cap_img
            source: 'images/captain.png'
            allow_stretch: False
            keep_ratio: True
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.2, 'center_y': 0.3}

        CustomLabel:
            id: tutorial_label
            text: root.texts[root.index]
            font_size: 12
            font_name: 'fonts/Caribbean.ttf'  # Specifica il font personalizzato
            color: 0, 0, 0, 1  # Testo nero
            size_hint: (None, None)
            size: self.texture_size
            pos_hint: {'center_x': 0.4, 'center_y': 0.6}
        
        Button:
            id: tutorial_button
            pos_hint: {'center_x': .4, 'center_y': .5}
            size_hint: (.1, .05)
            text: 'Skip'
            on_press: root.change_text(root.timestamp)
        
        Label:
            id: level_label
            text: 'Levels'
            pos_hint: {'center_x': .9, 'center_y': .01}
        Button:
            id: level_button
            background_color: 0, 0, 0, 0
            pos_hint: {'center_x': .9, 'center_y': .1}
            size_hint: (.1, .1)
            on_press: app.root.current = 'levels'
            Image:
                source: 'images/island.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 100, 100
        
        Label:
            id: ship_label
            text: 'Ship'
            pos_hint: {'center_x': .7, 'center_y': .2}
        Button:
            id: ship_button
            background_color: 0, 0, 0, 0
            pos_hint: {'center_x': .7, 'center_y': .3}
            size_hint: (.1, .1)
            on_press: app.root.current = 'ship'
            Image:
                source: 'images/wheels-icon-png-31839.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 100, 100
        
        Label:
            id: market_label
            text: 'Market'
            pos_hint: {'center_x': .3, 'center_y': .55}
        Button:
            id: market_button
            background_color: 0, 0, 0, 0
            pos_hint: {'center_x': .3, 'center_y': .5}
            size_hint: (.1, .1)
            on_press: app.root.current = 'market'
            Image:
                source: 'images/market-icon-23.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 60, 60
        
        Button:
            id: option_button
            background_color: 0, 0, 0, 0
            pos_hint: {'center_x': .9, 'center_y': .9}
            size_hint: (.1, .1)
            on_press: Factory.OpPopup().open()
            Image:
                source: 'images/options.webp'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 75, 75