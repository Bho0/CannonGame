<Ship>:
    name: 'ship'
    FloatLayout:
        Image:
            source: 'images/Concept_Art_pirate_ship_view_from_above_3.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)  # Copre l'intero layout
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        Button:
            pos_hint: {'center_x': .05, 'center_y': .91}
            size_hint: (.1, .1)
            background_color: 0, 0, 0, 0
            on_press:
                root.goto_mainpage(root.timestamp)
            Image:
                source: 'images/homeButton.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50, 50
        
        Button:
            id: captain_button
            background_color: 0, 0, 0, 0
            pos_hint: {'center_x': .25, 'center_y': .4}
            size_hint: (.1, .1)
            on_press: root.goto_captain(root.timestamp)
            Image:
                source: 'images/wheels-icon-png-31839.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 75, 75
        
        Button:
            id: cannon_button
            background_color: 0, 0, 0, 0
            pos_hint: {'center_x': .6, 'center_y': .25}
            size_hint: (.1, .1)
            on_press: root.goto_projectile(root.timestamp)
            Image:
                source: 'images/cannon.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 100, 100

<Captain>:
    name: 'captain'
    FloatLayout:
        Image:
            source: 'images/Default_pirate_captain_cabin_in_the_ship_2.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)  # Copre l'intero layout
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        BoxLayout:
            orientation: 'vertical'
            
            Label:
                text: 'Choose your captain:'
                font_size: 32
                font_name: 'fonts/Caribbean.ttf'  # Specifica il font personalizzato
            
            GridLayout:
                id: cap_grid
                cols: 4
                spacing: '10dp'
                padding: '10dp'

        Button:
            pos_hint: {'center_x': .05, 'center_y': .91}
            size_hint: (.1, .1)
            background_color: 0, 0, 0, 0
            on_press: app.root.current = 'ship'
            Image:
                source: 'images/undo.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 50, 50

<Projectile_Popup>:
    name: 'projectile'
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "This are your projectiles"
            font_name: 'fonts/Caribbean.ttf'         
        GridLayout:
            id: ammo_grid
            cols: 3
            spacing: '10dp'
            padding: '10dp'