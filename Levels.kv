<Levels>:
    name: 'levels'
    FloatLayout:
        Image:
            source: 'levels.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)  # Copre l'intero layout
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        Button:
            pos_hint: {'center_x': .2, 'center_y': .95}
            size_hint: (.05, .05)
            text: '^'
            on_press:
                app.root.current = 'comingsoon'
                root.manager.transition.direction = 'down'

<ComingSoon>:
    name: 'comingsoon'
    FloatLayout:
        Label:
            text: 'Coming Soon'
            font_name: 'Caribbean.ttf'
            font_size: 52