<LoadGame>:
    name: 'loadgame' 
    FloatLayout:  
        Image:
            source: 'images/Default_pirate_captain_cabin_in_the_ship_2.jpg'  
            allow_stretch: True  
            keep_ratio: False  
            size_hint: (1, 1)  
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  

        Label:
            text: 'SELECT YOUR PIRATE'  
            font_size: 32  
            font_name: 'fonts/Caribbean.ttf'  
            color: 0, 0, 0, 1  # Text color: black
            size_hint: (None, None) 
            size: self.texture_size  
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}  
       
        BoxLayout:
            orientation: 'vertical' 
            ScrollView:
                GridLayout:
                    id: load_grid  
                    cols: 1  
                    size_hint_y: None  
                    height: self.minimum_height  

        # Button to navigate back to the homepage
        Button:
            pos_hint: {'center_x': .05, 'center_y': .91} 
            size_hint: (.1, .1)  
            background_color: 0, 0, 0, 0  
            on_press: app.root.current = 'homepage'  
            Image:
                source: 'images/undo.png'  
                center_x: self.parent.center_x  
                center_y: self.parent.center_y  
                size: 50, 50  
