<NewShip>:
    name: "NS"
    GridLayout:
        cols: 3
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            BoxLayout:
                orientation: 'vertical'
                GridLayout:
                    cols: 5
                    canvas:
                        Rectangle:
                            source: "Images/BackGround.png"
                            size: self.size
                            pos: self.pos
                    Label:
                        size_hint: 1, .01
                        Image:
                            source: 'Images/Cap.png'
                            allow_stretch: True
                            keep_ratio: True
                            size: 200, 200
                            center_y: self.parent.center_y
                            center_x: self.parent.center_x
                    Label:

                    Label:
                        text: "This is our ship, from here you can control the status and the upgrades of our cannons."
                        size_hint: 1, 1
                    Label:

                    Button:
                        background_color: (1, 1, 1, 0)
                        text: "Next"
                        on_release: app.root.current = 'L'
                GridLayout:
                    cols: 1
                    canvas:
                        Rectangle:
                            source: "Images/Sea.jpeg"
                            size: self.size
                            pos: self.pos
                    Image:
                        source: 'Images/Ship.png'



<Ship>:
    name: "S"
    Button:
        text: "Back to Menu"
        on_release: app.root.current = 'main'