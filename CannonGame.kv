#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<Start>:
    name: 'start'    
    FloatLayout:
        Image:
            source: 'images/Default_pirate_ship_3.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)  # Copre l'intero layout
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        Label:
            text: 'PLAY'
            font_size: 52
            font_name: 'fonts/Caribbean.ttf'  # Specifica il font personalizzato
            color: 0, 0, 0, 1  # Testo nero
            size_hint: (None, None)
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        Button:
            id: play_button
            background_color: 0, 0, 0, 0
            pos_hint: {'center_x': .5, 'center_y': .3}
            on_press:
                root.manager.transition = FadeTransition(duration=0.5)
                app.root.current = 'homepage'
            Image:
                source: 'images/playButton.png'
                allow_stretch: True
                keep_ratio: False
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 200, 200